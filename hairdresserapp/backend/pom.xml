    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>17</release>
                    <compilerArgs>-parameters</compilerArgs>
                </configuration>
            </plugin>
            <!-- Surefire plugin for running tests -->
